{
    "/post": {
      "post": {
        "summary": "New Zira post",
        "requestBody": {
          "description": "Keep the postTypeId: 1 for an ordinary post",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Post"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sample response: The new ID of the post",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostResponse"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Post": {
        "type": "object",
        "required": [
          "postTypeId",
          "content",
          "toChannelId"
        ],
        "properties": {
          "postTypeId": {
            "type": "string",
            "example": "1"
          },
          "content": {
            "type": "string",
            "example": "Hello everyone!"
          },
          "toChannelId": {
            "type": "string",
            "example": "5218"
          }
        }
      },
      "PostResponse": {
        "type": "object",
        "required": [
          "data"
        ],
        "properties": {
          "data": {
            "type": "string",
            "example": "1"
          }
        }
      }
    }
  }