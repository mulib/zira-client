{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "zira-client"
  },
  "servers": [
    {
      "url": "https://{environment}.zira.us",
      "variables": {
        "environment": {
            "default": "api",
            "enum": ["api", "integ.api"]
        }
      }
    }
  ],
  "paths": {
    "/post": {
        "$ref": "post.json"
    }
  },
  "components": {
    "securitySchemes": {
        "ApiKeyAuth": {
            "type": "apiKey",
            "in": "header",
            "name": "X-API-Key"
        }
    },     
    "schemas": {
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Post": {
        "$ref": "https://raw.githubusercontent.com/lightapp/zira-client/master/api/schemas/post.json"
      },
      "PostResponse": {
        "$ref": "https://raw.githubusercontent.com/lightapp/zira-client/master/api/schemas/postResponse.json"
      }
    }
  }
}